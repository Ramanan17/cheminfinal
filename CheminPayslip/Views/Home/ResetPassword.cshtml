@model CheminPayslip.Models.ValidateLogin
@{
    ViewBag.Title = "ResetPassword";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<h2>ResetPassword</h2>
<style>
    .btn-primary {
        font-size: larger;
    }
</style>
<br />
<br />
<br />
<br />
@using (Html.BeginForm("ChangePassword", "Home"))
{
    <div class="form-group">
        @Html.LabelFor(m => m.EmployeeID)
        @Html.TextBoxFor(m => m.EmployeeID, new { @class = "form-control " })
        @Html.LabelFor(m => m.Password)
        @Html.PasswordFor(m => m.Password, new { @class = "form-control  " })
        <br />
        <br />
        <button type="submit" class="btn btn-primary">Submit</button>
    </div>
}

@if (!Model.Valid)
{
    <br />
    <br />
    <div class="alert alert-danger">Please Enter Valid Employee Details<</div>
}

