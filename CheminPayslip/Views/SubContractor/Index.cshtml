@model System.Collections.Generic.List<CheminPayslip.Models.SubContract>

@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<br />
<br />
<br />

<h2>Sub Contracts</h2>
<br />
<br />
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">
<br />
<br />
@Html.ActionLink("Add Sub-Contractor", "AddSub", "SubContractor", null, new { @class = "btn btn-amber" })
<br />
<br />
<table id="table_id" class="table table-hover table-bordered">
    <thead>
        <tr>
            <td>
                Sub-Contractor Id
            </td>
            <td>
                Sub-Contractor Name
            </td>
            <td>
                Edit Options
            </td>
            <td>
                Delete Options
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var sub in Model)
        {
            <tr>
                <td>
                    @sub.SubContractId
                </td>
                <td>
                    @sub.SubContractorName
                </td>
                <td>
                    <span class="btn btn-blue">
                        @Html.ActionLink("Edit", "Edittemp", "SubContractor", new { id = @sub.SubContractId }, null)
                    </span>
                </td>
                <td>
                    <span class="btn btn-danger">
                        @Html.ActionLink("Delete", "Delete", "SubContractor", new { id = @sub.SubContractId }, null)
                    </span>
                </td>
            </tr>
        }

    </tbody>
</table>
@section scripts
{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready(function () {
            $('#table_id').DataTable();
        });
    </script>
}
