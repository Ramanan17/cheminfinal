@model CheminPayslip.Models.AdminLocal

@{
    ViewBag.Title = "ViewEmployees";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">

<br/>
<br/>
<br/>
<h2>View Employees</h2>
<br/>
<br/>
<span class="btn btn-primary">
    @Html.ActionLink("Add Local Helper","Addlocal","Admin",new{id =Model.placeid},null)

</span>
<br/>
<table id="table_id" class="table table-hover table-bordered">
    <thead>
    <tr>
        <th>EmployeeId</th>
        <th>Employee Name</th>
        <th>Designation</th>
        <th>Sub-Contractor Name</th>
        <th>Edit Options</th>
        <th>Delete Options</th>
    </tr>
    </thead>
    <tbody>
    @foreach (var emp in Model.Employeee)
    {
        <tr>
            <td>@emp.EmpId</td>
            <td>@emp.name</td>
            <td>@emp.Design</td>
            <td>
                
            </td>
            <td>
                <span class="btn btn-primary">
                    @Html.ActionLink("Edit", "EditempSite", "Admin", new {id = @emp.EmpId}, null)
                </span>
            </td>
            <td>
                <span class="btn btn-danger">
                    @Html.ActionLink("Delete", "DeleteResult", "Admin", new {id = @emp.EmpId}, null)
                </span>
            </td>
        </tr>
    }
    </tbody>
</table>

@section scripts
{
    <script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script>
        $(document).ready( function () {
            $('#table_id').DataTable();
        } );
    </script>
}


