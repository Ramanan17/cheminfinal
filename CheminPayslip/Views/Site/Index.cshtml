@model List<CheminPayslip.Models.SiteViewModel>
@{
    ViewBag.Title = "title";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
<!DOCTYPE html>
<style>
    table.table a {
        margin: 0;
        color: white;
    }
</style>

<html>
<head>
    <link rel="stylesheet" type="text/css" href="https://cdn.datatables.net/1.10.19/css/jquery.dataTables.css">

   
</head>
<body>
    <div>
        <br />
        <br />
        <br />
        <br />
        @Html.ActionLink("Add Site","Site","Home",null,new{@class="btn btn-primary"})
        <br/>
        <table id="table_id" class="table table-hover table-bordered">
            <thead>
                <tr>

                    <th style="font-weight: bold">Place Name</th>
                    <th style="font-weight: bold">Site Manager</th>
                    <th style="font-weight:bold">Edit Options</th>
                    <th style="font-weight:bold">Delete Options</th>



                </tr>
            </thead>
            <tbody>
            @foreach (var site in Model)
            {
                <tr>
                    <td>@site.PlaceName</td>
        
               
                    <td>@site.EmployeeName</td>
                
                    <td>
                        <span class="btn btn-primary" style="color: white">
                        @Html.ActionLink("Edit", "Edit", "Site", new {id = @site.PlaceId}, null)
                        </span>
                        </td>
                    <td>
                        <span class="btn btn-primary" style="color: white">
                            @Html.ActionLink("Delete", "Delete", "Site", new {id = @site.PlaceId}, null)
                        </span>
                    </td>
                    
                </tr>
            }
           
            </tbody>
        </table>
        
        

        <br />
        <br />


    </div>
</body>
</html>


@section scripts
{
<script type="text/javascript" charset="utf8" src="https://cdn.datatables.net/1.10.19/js/jquery.dataTables.js"></script>
    <script src="http://code.jquery.com/ui/1.10.2/jquery-ui.js"></script>
    <script>
        $(document).ready( function () {
            $('#table_id').DataTable();
        } );
    </script>
}
